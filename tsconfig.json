{
  "compilerOptions": {
    "lib": ["es6", "es2017", "esnext"],
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "outDir": "./dist",
    "types": ["node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": ["node_modules", "dist", "__tests__"],
  "include": ["./src/**/*.ts"]
}
